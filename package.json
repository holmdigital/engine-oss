{
    "name": "@holmdigital/a11y-monorepo",
    "version": "0.1.0",
    "private": true,
    "description": "Holm Digital Regulatory-Compliant Accessibility Ecosystem",
    "workspaces": [
        "packages/engine",
        "packages/standards"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "dev": "npm run dev --workspaces --if-present",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
        "typecheck": "npm run typecheck --workspaces --if-present",
        "scan:local": "node packages/engine/dist/cli/index.js scan http://localhost:3004"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@types/node": "^22.10.2",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "prettier": "^3.4.2",
        "rimraf": "^5.0.5",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/holmdigital/a11y-hd.git"
    },
    "author": "Holm Digital AB",
    "license": "MIT"
}